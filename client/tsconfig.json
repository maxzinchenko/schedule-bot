{
  "compilerOptions": {
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "module":"commonjs",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
